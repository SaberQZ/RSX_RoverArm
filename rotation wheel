#include <Servo.h>
Servo my_servoR;
Servo my_servoL;
void setup()
{
  my_servoR.attach(2);
  my_servoL.attach(3);
  my_servoR.write(0);
  my_servoL.write(0);  
  Serial.begin(9600);
}
void loop()
{
  int x = 0;
  int y =180;
  for(int i = 0;i<180;i++){
    x = x+1;
    y = y-1;
  my_servoR.write(x);
  my_servoL.write(y);
  delay(15);
  }
}
